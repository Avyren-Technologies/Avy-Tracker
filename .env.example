# Enhanced Shift Tracker Environment Variables
# Copy this file to .env and fill in your actual values

# Frontend Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PROJECT_ID=your_expo_project_id
EXPO_PUBLIC_APP_VERSION=1.0.0
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Backend Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shift_tracker_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shift_tracker_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# SMS Configuration (choose one)
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OR AWS SNS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:otp-notifications

# Google AI Configuration (for chat integration)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# Face Verification Configuration
FACE_VERIFICATION_THRESHOLD=0.85
FACE_LIVENESS_THRESHOLD=0.7
MAX_FACE_VERIFICATION_ATTEMPTS=3
FACE_VERIFICATION_TIMEOUT=30000

# Geofence Configuration
DEFAULT_GEOFENCE_RADIUS=100
GEOFENCE_ACCURACY_THRESHOLD=10
MAX_GEOFENCE_ZONES=50

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=*
HELMET_ENABLED=false
HTTPS_ONLY=false
SECURE_COOKIES=false

# Biometric Configuration
BIOMETRIC_ENCRYPTION_KEY=your-32-character-encryption-key-here
BIOMETRIC_STORAGE_TTL=2592000
BIOMETRIC_BACKUP_ENABLED=true

# Feature Flags
ENABLE_FACE_VERIFICATION=true
ENABLE_OTP_VERIFICATION=true
ENABLE_GEOFENCE_TRACKING=true
ENABLE_OFFLINE_MODE=true
ENABLE_BIOMETRIC_STORAGE=true
ENABLE_ADVANCED_ANALYTICS=false

# Development Configuration
ENABLE_MOCK_SERVICES=false
SKIP_EMAIL_VERIFICATION=false
ENABLE_DEBUG_LOGGING=true
TEST_PHONE_NUMBER=+1234567890
TEST_OTP_CODE=123456

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# EAS Update Configuration (for Expo)
# eas update --channel production --message "Your update message here"
# if using eas update then after update run this command:
# npx sentry-expo-upload-sourcemaps dist